//* This project will do the following task listed
public class NonVoid_Method_Practice {

	public static void main(String[] args) 
	{
//* Generates my name, hair style, and best friend
		System.out.println("Task 1:");
		System.out.println(stateName());
		System.out.println(stateHairStyle());
		System.out.println(stateFavoriteFood());
		
//* Generates the radius, diameter, circumference, and area		
		System.out.println();
		System.out.println("Task 2:");
		System.out.println("Radius= " + radius(5));
		System.out.println("Diameter= " + diameter(5));
		System.out.println("Circumference= " + circumference(5));
		System.out.println("Area= " + area(5));
		
//* Generates the sum, difference, product, quotient, and remainder
		System.out.println();
		System.out.println("Task 3:");
		System.out.println("Sum= " + sum(10, 18));
		System.out.println("Difference= " + difference(10, 18));
		System.out.println("Product= " + product(10, 18));
		System.out.println("Quotient= " + quotient(10, 18));
			System.out.println("Remainder= " + remainder(10, 18));
	}
	
//* Creates NON-void methods for all the following topics
	public static String stateName()
	{
		return"My name is Syril-Jem Calicdan";
	}
	public static String stateEyeColor()
	{
		return"My eyes are brown.";
	}
	public static String stateHairStyle()
	{
		return"My hair style is in a bowl cut";
	}
	public static String stateBestFriend()
	{
		return"My best friends are debatable.";
	}
	public static String stateFavoriteFood()
	{
		return"My favorite food is lithium batteries";
	}
	
//* Creates NON-void methods for the calculations the diameter, circumference, and area of a circle
	public static double radius(int radius)
	{
		return radius;
	}

	public static double diameter(int radius)
	{
		double diameter=radius*2;
		return diameter;
	}
	
	public static double circumference(int radius)
	{
		double pi=3.14159;
		double circumference=pi*radius*2;
		return circumference;
	}
	
	public static double area(int radius)
	{
		double pi=3.14159;
		double area=pi*radius*radius;
		return area;
	}
	
//* Creates NON-void methods for the calculations of sum, difference, product, quotient, and remainder
	public static double sum(int num1, int num2)
	{
		double sum=num1+num2;
		return sum;
	}
	
	public static double difference(int num1, int num2)
	{
		double difference=num1-num2;
		return difference;
	}
	
	public static double product(int num1, int num2) 
	{
		double product=num1*num2;
		return product;
	}
	
	public static double quotient(int num1, int num2) 
	{
		double quotient=num1/num2;
		return quotient;
	}
	
	public static double remainder(int num1, int num2) 
	{
		double remainder=num1%num2;
		return remainder;
	}
}
